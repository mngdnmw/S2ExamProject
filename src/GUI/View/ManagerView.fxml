            </Tab>
         </tabs>
      </JFXTabPane>
        <JFXButton fx:id="btnClose" buttonType="RAISED" layoutX="469.0" layoutY="451.0" onAction="#onBtnClosePressed" prefHeight="25.0" prefWidth="220.0" styleClass="cancelButtons" text="Close" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="15.0" />
            </font>
        </JFXButton>
    </children>
</AnchorPane>
