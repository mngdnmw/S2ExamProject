                            <TableColumn fx:id="colName" prefWidth="148.0" text="Name" />
                            <TableColumn fx:id="colPhone" prefWidth="130.0" text="Phone" />
                              <TableColumn fx:id="colEmail" prefWidth="171.0" text="Email" />
                          </columns>
                        </TableView>
                        <JFXCheckBox fx:id="chkVolunteers" layoutX="182.0" layoutY="27.0" onAction="#onCheckBoxAction" text="Volunteers" />
                        <JFXCheckBox fx:id="chkManagers" layoutX="284.0" layoutY="27.0" onAction="#onCheckBoxAction" text="Managers" />
                        <JFXCheckBox fx:id="chkAdmins" layoutX="372.0" layoutY="27.0" onAction="#onCheckBoxAction" text="Admins" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
            <Tab fx:id="tabGraphStats" onSelectionChanged="#loadGuildView" text="Graphs &amp; Statistics">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="678.0">
                     <children>
                     </children></AnchorPane>
              </content>
            </Tab>
