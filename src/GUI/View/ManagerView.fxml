<AnchorPane id="AnchorPane" fx:id="root" prefHeight="529.0" prefWidth="700.0" stylesheets="@MainLayout.css" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.ManagerViewController">
    <children>
        <Label fx:id="lblUserName" layoutX="19.0" layoutY="22.0" prefHeight="17.0" prefWidth="508.0" text="Logged in as:" />
        <JFXComboBox fx:id="cmbGuildChooser" focusColor="#00c4ad" labelFloat="true" layoutX="517.0" layoutY="17.0" prefHeight="31.0" prefWidth="169.0" promptText="Guild Chooser" />
        <JFXTabPane fx:id="tabPane" layoutX="11.0" layoutY="58.0" prefHeight="431.0" prefWidth="678.0" styleClass="jfx-tab-pane">
            <tabs>
                <Tab fx:id="tabVolunInfo" onSelectionChanged="#loadGuildView" text="Volunteer Information">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                            <children>
                                <Label fx:id="lblNotes" layoutX="461.0" layoutY="20.0" text="Notes:">
                  
                                    <font>
                                        <Font size="20.0" />
                                    </font>
                                </Label>
                                <JFXTextField fx:id="txtSearch" focusColor="#00e2c7" layoutX="2.0" layoutY="15.0" prefHeight="29.0" prefWidth="171.0" promptText="Search user.." />
                                <JFXButton fx:id="btnAddUser" buttonType="RAISED" layoutX="14.0" layoutY="362.0" onAction="#onBtnAddUserClicked" prefHeight="31.0" prefWidth="119.0" style="-fx-background-color: #029E99;" text="Add User" textFill="WHITE">
                                    <font>
                                        <Font name="System Bold" size="15.0" />
                                    </font>
                                </JFXButton>
                                <JFXButton fx:id="btnEditInfo" buttonType="RAISED" layoutX="154.0" layoutY="362.0" onAction="#onEditInfoPressed" prefHeight="31.0" prefWidth="147.0" style="-fx-background-color: #00c4ad;" text="Edit Information" textFill="WHITE">
                           <font>
                              <Font name="System Bold" size="15.0" />
                           </font></JFXButton>
                                <JFXTextArea fx:id="txtNotes" editable="false" focusColor="#00e2c7" layoutX="459.0" layoutY="57.0" prefHeight="287.0" prefWidth="220.0" stylesheets="@MainLayout.css" />
                                <TableView fx:id="tblUsers" layoutX="2.0" layoutY="57.0" onMousePressed="#onTablePressed" prefHeight="293.0" prefWidth="451.0">
                                    <columns>
                                        <TableColumn fx:id="colName" prefWidth="148.0" text="Name" />
                                        <TableColumn fx:id="colPhone" prefWidth="130.0" text="Phone" />
                                        <TableColumn fx:id="colEmail" prefWidth="171.0" text="Email" />
                                    </columns>
                                </TableView>
                                <JFXCheckBox fx:id="chkVolunteers" layoutX="182.0" layoutY="27.0" onAction="#onCheckBoxAction" text="Volunteers" visible="false">
                           <font>
                              <Font size="12.0" />
                           </font></JFXCheckBox>
                                <JFXCheckBox fx:id="chkManagers" layoutX="284.0" layoutY="27.0" onAction="#onCheckBoxAction" text="Managers" visible="false">
                           <font>
                              <Font size="12.0" />
                           </font></JFXCheckBox>
                                <JFXCheckBox fx:id="chkAdmins" layoutX="372.0" layoutY="27.0" onAction="#onCheckBoxAction" text="Admins" visible="false">
                           <font>
                              <Font size="12.0" />
                           </font></JFXCheckBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="tabGraphStats" onSelectionChanged="#loadGuildView" text="Graphs &amp; Statistics">
                    <content>
                        <AnchorPane fx:id="rootGraph" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="678.0">
                            <children>
                                <LineChart fx:id="lineChartGuildHours" layoutX="9.0" layoutY="14.0" prefHeight="335.0" prefWidth="661.0">
                                    <xAxis>
                                        <NumberAxis side="BOTTOM" fx:id="xAxis" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis fx:id="yAxis" side="LEFT" />
                                    </yAxis>
                                </LineChart>
                                <StackPane fx:id="stckPaneGraphError" prefHeight="150.0" prefWidth="200.0" styleClass="loadingScreen" visible="false" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                                            <children>
                                                <Label text="Please pick a guild and click refresh" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="32.0" />
                                                    </font>
                                                </Label>
                                                <JFXButton buttonType="RAISED" onAction="#loadGuildView" prefHeight="128.0" prefWidth="134.0" styleClass="JFXRoundedButton" text="Refresh" textFill="WHITE">
                                                    <font>
                                                        <Font name="System Bold" size="25.0" />
                                                    </font>
                                                </JFXButton>
                                            </children>
                                        </VBox>
                                    </children>
                                </StackPane>
                        <JFXDatePicker layoutX="17.0" layoutY="355.0" prefHeight="30.0" prefWidth="135.0" />
                        <JFXDatePicker layoutX="179.0" layoutY="354.0" prefHeight="30.0" prefWidth="135.0" />
                        <Label layoutX="153.0" layoutY="341.0" prefHeight="59.0" prefWidth="17.0" text="-">
                           <font>
                              <Font size="41.0" />
                           </font>
                        </Label>
                        <JFXButton fx:id="btnRefresh" alignment="BOTTOM_CENTER" contentDisplay="CENTER" layoutX="332.0" layoutY="343.0" prefHeight="55.0" prefWidth="52.0" style="-fx-background-color: rgba(0,0,0,0); -fx-background-radius: 50%;" text=" ">
                           <graphic>
                              <ImageView fitHeight="40.0" fitWidth="42.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../../Resources/RefreshIcon.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </JFXButton>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab fx:id="tabGuildManagement" onSelectionChanged="#loadGuildView" text="Guild Management">
                    <content>
                        <AnchorPane fx:id="anchorPaneGuild" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs>
        </JFXTabPane>
        <JFXButton fx:id="btnClose" buttonType="RAISED" layoutX="469.0" layoutY="488.0" onAction="#onBtnClosePressed" prefHeight="25.0" prefWidth="220.0" styleClass="cancelButtons" text="Close" textFill="WHITE">
            <font>
                <Font name="System Bold Italic" size="15.0" />
            </font>
        </JFXButton>
    </children>
</AnchorPane>
